@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model IEnumerable<BlackYellow.MVC.Domain.Entites.Product>
<div class="row">
    <div class="col-md-4 col-md-offset-3">
        <form action="" class="search-form">
            <div class="form-group has-feedback">
                <label for="search" class="sr-only">Procurar Produto</label>
                <input type="text" class="form-control" name="search" id="search" placeholder="Digite o produto...">
                <span class="fa fa-search form-control-feedback"></span>
            </div>
        </form>
    </div>
</div>

<table class="table table-sm">
    <thead>
        <tr>
            <th>Produto</th>
            <th>Quantidade</th>
            <th>Preço</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> @item.Name</td>
                <td> @item.Quantity</td>
                <td> @item.Price</td>
                <td><button id="btn-update" class="btn btn-info btn-circle"><i class="glyphicon glyphicon-ok"></i></button></td>
            </tr>
        }
       
    </tbody>
</table>
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Atualizar Quantidade de Produto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="Update/" asp-controller="Product">
                    <input  type="text" id="product.Quantity" name="product.Quantity" required aria-describedby="basic-addon3"/>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </form>
                
            </div>
            <div class="modal-footer">
               
               
            </div>
        </div>
    </div>
</div>
<a type="submit" href="/Product/Create" class="btn btn-info btn-circle"><i class="glyphicon glyphicon-ok"></i></a>